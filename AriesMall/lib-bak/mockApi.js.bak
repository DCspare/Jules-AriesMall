// NEW FUNCTION
export const getProductById = (id) => {
  return new Promise((resolve, reject) => {
    setTimeout(() => {
      const product = MOCK_PRODUCTS.find((p) => p.id === id);
      if (product) {
        resolve(product);
      } else {
        reject(new Error("Product not found"));
      }
    }, 900);
  });
};

// NEW: Function to get products by category slug
export const getProductsByCategory = (categorySlug) => {
  return new Promise((resolve) => {
    setTimeout(() => {
      const filtered = MOCK_PRODUCTS.filter(
        (p) => p.category.toLowerCase() === categorySlug.toLowerCase()
      );
      resolve(filtered);
    }, 1000);
  });
};

// --- CORRECTED AUTH FUNCTIONS ---

export const login = (email, password) => {
  return new Promise((resolve, reject) => {
    setTimeout(() => {
      const user = users.find(
        (u) => u.email === email && u.password === password
      );
      if (user) {
        const { password, ...userWithoutPassword } = user;
        resolve({ user: userWithoutPassword, token: "fake-jwt-token" });
      } else {
        reject(new Error("Invalid credentials"));
      }
    }, 800);
  });
};

export const signup = (name, email, password) => {
  return new Promise((resolve, reject) => {
    setTimeout(() => {
      if (users.some((u) => u.email === email)) {
        return reject(new Error("User with this email already exists."));
      }
      const newUser = {
        id: `user_${Math.random().toString(36).substr(2, 9)}`,
        name,
        email,
        password,
        createdAt: new Date().toISOString(),
      };
      users.push(newUser);
      // Automatically log in the new user
      const { password: pw, ...userWithoutPassword } = newUser;
      resolve({ user: userWithoutPassword, token: "fake-jwt-token" });
    }, 1000);
  });
};

export const getOrderHistory = (userId) => {
  return new Promise((resolve) => {
    setTimeout(() => {
      const userOrders = orders
        .filter((o) => o.userId === userId)
        .map((order) => {
          const itemsWithDetails = order.items.map((item) => {
            const product = MOCK_PRODUCTS.find((p) => p.id === item.productId);
            const placeholderImage =
              "https://placehold.co/100x100/eee/aaa?text=N/A";
            return {
              ...item,
              name: product ? product.name : "Unknown Product",
              image:
                product && product.images && product.images[0]
                  ? product.images[0]
                  : placeholderImage,
            };
          });
          return { ...order, items: itemsWithDetails };
        });
      resolve(userOrders);
    }, 700);
  });
};
